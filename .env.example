# ============================================================================
# CEKA (Civic Education Kenya) Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values.
# DO NOT commit .env to version control!

# ============================================================================
# SUPABASE CONFIGURATION (Required)
# ============================================================================
# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anonymous/public key (safe to expose in frontend)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (DO NOT expose in frontend - server-side only)
# This is only needed for server-side scripts and Edge Functions
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# STORAGE CONFIGURATION (Optional - for external storage)
# ============================================================================
# Uncomment and configure if using Backblaze B2 or Cloudflare R2

# Storage provider: 'supabase' | 'backblaze' | 'cloudflare'
# VITE_STORAGE_PROVIDER=supabase

# Public URL prefix for external storage (Backblaze/Cloudflare)
# Example for Backblaze: https://f000.backblazeb2.com/file/your-bucket-name
# Example for Cloudflare: https://your-account.r2.cloudflarestorage.com/bucket-name
# VITE_STORAGE_PUBLIC_URL_PREFIX=

# Backblaze B2 credentials (server-side only)
# B2_APPLICATION_KEY_ID=
# B2_APPLICATION_KEY=
# B2_BUCKET_NAME=

# Cloudflare R2 credentials (server-side only)
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_ENDPOINT=
# R2_BUCKET_NAME=

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Application base URL (used for OAuth redirects, deep links, etc.)
VITE_APP_URL=http://localhost:5173

# Enable/disable development features
# VITE_DEV_MODE=true

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
# VITE_GA_TRACKING_ID=
# VITE_POSTHOG_KEY=

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================
# VITE_ENABLE_EVENTS_CALENDAR=true
# VITE_ENABLE_RESOURCE_UPLOAD=true
# VITE_ENABLE_BLOG_COMMENTS=true
