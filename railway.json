
{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd app && pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "cd app && python main.py",
    "restartPolicyType": "ON_FAILURE",
    "sleepApplication": false,
    "cronSchedule": null
  }
}
